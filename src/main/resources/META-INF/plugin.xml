<idea-plugin>
    <id>com.github.ericodemecha.Modern_Cpp_New_Project-plugin</id>
    <name>Modern Cpp New Project</name>
    <vendor email="techcider4134@gmail.com" url="https://github.com/EricoDeMecha/Modern_Cpp_New_Project-plugin">MCpp</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.mcpp.actions.MCppComponent"/>
    </extensions>

    <actions>
        <action id="MCPP.CreateProject" class="com.mcpp.actions.CreateProjectAction" text="Modern Cpp New Project">
            <add-to-group group-id="NewProjectOrModuleGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>